# Bazari Ecosystem Environment Variables
# Copy this file to .env.local and fill in your values

# General
NODE_ENV=development

# Blockchain
CHAIN_ENDPOINT=ws://localhost:9944
CHAIN_NETWORK=development

# API
API_PORT=3333
DATABASE_URL=postgresql://bazari:bazari@localhost:5432/bazari_db
JWT_SECRET=your-secret-key-here-change-in-production
CORS_ORIGIN=http://localhost:5173

# IPFS
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Web App
VITE_API_URL=http://localhost:3333
VITE_CHAIN_ENDPOINT=ws://localhost:9944
VITE_IPFS_GATEWAY=http://localhost:8080

# OpenSearch (optional for MVP)
OPENSEARCH_HOST=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Redis (optional for cache)
REDIS_URL=redis://localhost:6379