{
  "name": "bazari",
  "version": "0.1.0",
  "private": true,
  "description": "Ecossistema Bazari - Nação Digital Descentralizada",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "setup": "pnpm install && pnpm build",
    "check": "node scripts/check-structure.js",
    "check:structure": "node scripts/check-structure.js",
    "check:bash": "bash scripts/check-structure.sh",
    "check:python": "python scripts/check-structure.py",
    "fix:dev": "bash scripts/fix-dev-errors.sh",
    "fix:types": "pnpm --filter @bazari/chain-client exec tsc --noEmit --skipLibCheck || true && pnpm --filter @bazari/wallet-core exec tsc --noEmit --skipLibCheck || true",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "rebuild": "pnpm clean && pnpm install && pnpm build"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "rimraf": "^5",
    "tsup": "8.5.0",
    "turbo": "^1.11.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.1",
  "pnpm": {
    "overrides": {
      "@polkadot/util": "12.6.2",
      "@polkadot/util-crypto": "12.6.2",
      "@polkadot/keyring": "12.6.2"
    }
  },
  "dependencies": {
    "@noble/curves": "^1.4.0",
    "@noble/hashes": "^1.4.0",
    "@polkadot/networks": "^13.5.6",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@polkadot/wasm-bridge": "^7.5.1",
    "@polkadot/wasm-crypto": "^7.5.1",
    "@polkadot/wasm-crypto-asmjs": "^7.5.1",
    "@polkadot/wasm-crypto-init": "^7.5.1",
    "@polkadot/wasm-crypto-wasm": "^7.5.1",
    "@polkadot/wasm-util": "^7.5.1",
    "@polkadot/x-bigint": "^13.5.6",
    "@polkadot/x-global": "^13.5.6",
    "@polkadot/x-randomvalues": "^13.5.6",
    "@polkadot/x-textdecoder": "^13.5.6",
    "@polkadot/x-textencoder": "^13.5.6",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-compose-refs": "^1.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@remix-run/router": "^1.19.2",
    "@scure/base": "^2.0.0",
    "@substrate/ss58-registry": "^1.51.0",
    "bn.js": "^5.2.2",
    "class-variance-authority": "^0.7.1",
    "cookie": "^1.0.2",
    "dijkstrajs": "^1.0.3",
    "html-parse-stringify": "^3.0.1",
    "invariant": "^2.2.4",
    "prisma": "^5.7.1",
    "qrcode": "^1.5.3",
    "react-fast-compare": "^3.2.2",
    "react-helmet-async": "^2.0.5",
    "react-router": "^6.26.2",
    "react-router-dom": "^6.26.2",
    "scheduler": "^0.26.0",
    "set-cookie-parser": "^2.7.1",
    "shallowequal": "^1.1.0",
    "use-sync-external-store": "^1.5.0",
    "void-elements": "^3.1.0"
  }
}